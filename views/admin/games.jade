.page-header
    h1= title

.row
    .span12
        div#response
        table.table
            thead
                tr
                    th.span1 
                    th.span3 name
                    th.span2 size
                    th.span2 lives
                    th.span2 max time
            if games.length > 0
                tbody
                    - each game in games
                      tr
                        td.preview(data-hash='#{game.hash}', data-width='#{game.width}', data-height='#{game.height}')
                        td.name= game.name
                        td.size  #{game.width}x#{game.height}
                        td.lives= game.lives
                        td.maxTime= game.maxTime
                        td.actions
                            a.delete(href='/admin/game/#{game._id}') Delete
            else
                tbody
                    tr: td(colspan=6) There are no games.

- scripts.push('/javascripts/admin-games.js')
- scripts.push('/bootstrap/js/bootstrap-alert.js')
- scripts.push('/bootstrap/js/bootstrap-transition.js')